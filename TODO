// Canonical form
// ----- Animal.h --------------------------------------------------------------

#pragma once
#include "Animal.h"

class Dog : public Animal
{
public:
	Dog();
	Dog(const Dog &other);
	Dog &operator=(const Dog &other);
	virtual ~Dog();
};

// ----- Animal.cpp ------------------------------------------------------------

Animal::Animal()
{
	type = "";
}

Animal::Animal(const Animal &other)
{
	*this = other;
}

Animal &Animal::operator=(const Animal &other)
{
	if (this == &other)
		return *this;
	type = other.type;
	return *this;
}

Animal::~Animal() {}

// ----- Dog.cpp ---------------------------------------------------------------

Dog::Dog() : Animal()
{
	type = "Dog";
}

Dog::Dog(const Dog &other) : Animal(other)
{
	*this = other;
}

Dog &Dog::operator=(const Dog &other)
{
	if (this == &other)
		return *this;
	Animal::operator=(other);
	return *this;
}

Dog::~Dog() {}
